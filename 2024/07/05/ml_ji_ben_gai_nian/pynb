    "import pandas as pd\n",
    "import numpy as np\n",
    "\n",
    "# 设定随机种子以保证结果可重复\n",
    "np.random.seed(0)\n",
    "\n",
    "# 生成数据\n",
    "# 房龄（years）\n",
    "house_age = np.random.randint(0, 50, 50)\n",
    "\n",
    "# 房价（prices），假设价格与房龄有线性关系，加上一些随机噪声\n",
    "house_price = 300 - 2.5 * house_age + np.random.normal(0, 10, 50)\n",
    "\n",
    "# 创建DataFrame\n",
    "data = pd.DataFrame({\n",
    "    'House Age (years)': house_age,\n",
    "    'House Price (thousands)': house_price\n",
    "})\n",
    "\n",
    "data"
   ]
  },
  {
   "cell_type": "markdown",
